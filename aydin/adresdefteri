#!/usr/bin/env ruby

require "turkish_support"
require "./adres-defteri"
require "./menuler"
require "./../yararli/terminalrenkleri"

using TurkishSupport

ad = AdresDefteri.new

loop do
	secim = Menuler.ana until Menuler.ana? secim
	break if secim == "E"
	
	print `clear`

	case secim
	when "1"
		i = 0
		ad.liste.each { |kisi| puts "#{i.next}) #{kisi.ad_soyad}" }
	when "2"

	end

	secim = Menuler.liste until Menuler.liste? secim
	secim == "E" ? break : redo
end

print `clear`
puts "İyi günler dileriz."